<%= link_to "Download CSV", tagged_posts_path(format: "csv")+"?ref=#{@scrape_session.id}" %>

<table class="table table-hover">
  
  <thead>
    <tr>
      <th></th>
      <th>Tagger</th>
      <th>Data being tagged</th>
      <th>Session</th>
      <th>Question</th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.id %></td>
      	<td>
      		<%= tweet.taggers.first.username %>
      	</td>
        <td><%= tweet.text.html_safe %></td>
        <td><%= tweet.scrape_session.name if tweet.scrape_session %></td>
        <% if tweet.answers %>    
          <% tweet.answers.each do |answer| %>
            <% if answer.question.present? %>
              <td><%= answer.question.content %></td>
              <td>
                <ul>
                  <li><%= answer.content %></li>
                </ul>
              </td>
            <% end %>          	
          <% end %>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= will_paginate(@scrape_sessions) %>