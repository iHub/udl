<h1>Listing tweets (<%= @tweet_count %>)</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>

      <% tweet.is_a?(DisqusForumComment) ? @type = "disqus"  : @type = "tweet" %>
      <tr>
        <td width="50"><%= tweet.text.html_safe %></td>
        <td><%= tweet.scrape_session.name if tweet.scrape_session %></td>

        <% if tweet.scrape_session && tweet.scrape_session.questions %>
          <td>
            <% tweet.scrape_session.questions.each do |quiz| %>
              <%= quiz.content %>
              <%- quiz.answers.each do |ans| %>
                <ul>
                  <li><%= link_to("#{ans.content}", tweet_tag_path(tweet)+"?ref=#{ans.id}-#{@type}" ) %></li>
                </ul>
              <% end %>
            <% end %>
          </td>
        <% end %>
        <% if tweet.answers.present? %>
          <% tweet.answers.each do |answer| %>
            <td><%= answer.content %></td>
          <% end %>
          
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

