<h1>Listing Accounts followed</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>User Id</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <%# binding.pry %>
      <tr>
        <td><%= account.username %></td>
        <td><%= account.name %></td>
        <td><%= account.twitter_user_id %></td>
        <td><%= long_date account.created_at %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "small-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Follow Account', new_account_path, class: "big-button" %>
