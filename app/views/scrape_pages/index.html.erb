<% provide(:page_title, "Session: #{@scrape_session.name.capitalize} | Pages" ) %>

<div class="page-header">
	<h2 class="pull-left">Pages</h2>
	<ul class="nav nav-pills pull-right">
		<li><%= render 'shared/nav/back_to_session'  %></li>
		<li><%= link_to "Posts", {controller: "fb_posts", action: :index, scrape_session_id: @scrape_session.id} %></li>
		<li>
			<%= link_to "Add Page to this Session", new_scrape_session_scrape_page_path %>
		</li>
	</ul>	
	<div class="clearfix"></div>
</div>

<div class="well well-sm">
	<h3 class="session-name"><small class="pull-right">Session: <strong><%= @scrape_session.name %></strong></small></h3>
	<div class="clearfix"></div>
	<hr />	
	<p class="session-description-well"><%= @scrape_session.description %></p>
</div>

<% if !@scrape_pages.blank? %>
	<div>
		<h3>Pages in this Session</h3>
	</div>

	<%= render 'shared/scrape_page_list' %>

	<!-- add pagination -->

<% else %>
	<div class="well well-sm">
		<h4>You haven't added any pages to this session</h4>
	</div>
<% end %>


<% content_for :debug_dump do %>
  <p>inspect <%= @scrape_pages.inspect %></p>
  <p>Class <%= @scrape_pages.class %></p>
  <p>Nil <%= @scrape_pages.nil? %></p>
  <p>Blank <%= @scrape_pages.blank? %></p>
  <hr />
  <p>inspect @scrape_session <%= @scrape_session.inspect %></p>

<% end %>