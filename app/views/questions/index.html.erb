	<h2 class="pull-left">Questions</h2>
	<div class="clearfix"></div>
</div>

<% if !@questions.blank? %>

	<%= render 'shared/question_list', object: @questions %>

	<!-- add pagination -->

<% else %>
	<div class="well well-sm">
