<% provide(:page_title, "Edit Question") %>

<div class="page-header">
	<h2>Edit Question</h2>
</div>

<div class="col-md-8 panel panel-default signup">

	<div class="panel-body">
		
		<%= form_for [@scrape_session, @question] do |f|%>
			
			<%= render 'shared/error_messages', object: f.object %>

			<div class="form-group">
				<%= f.label		:question %>
				<%= f.text_field 	:question, class: "form-control", 
											placeholder: "The Question", 
											required: "text" %>
			</div>

			<div class="form-group">
				<%= f.label		:description %>
				<%= f.text_area 	:description, class: "form-control", 
											placeholder: "Description" %>
			</div>

			<%= f.submit "Update Question", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>