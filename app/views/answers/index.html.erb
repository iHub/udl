<% provide(:page_title, "Answers" ) %>
<% provide(:app_page, "answers" ) %>
<% provide(:app_sub, "answers_index" ) %>

<div class="page-header">
	<h2 class="pull-left">Answers</h2>
	<div class="clearfix"></div>
</div>

<% if @answer_scope == "session" %>

  <div class="panel panel-default session-summary">
    <div class="panel-heading">Session Summary</div>
    <div class="panel-body">
        <%= render 'shared/scrape_session_description', object: @scrape_session %>
    </div>
  </div>

<% elsif @answer_scope == "question" %>

  <div class="well well-sm question-description">
    <div class="session-name pull-right">Session: <strong><%= @scrape_session.name %></strong></div>
    <h3 class="question"><%= @question.question.capitalize %>
    </h3>
    <hr />
    <p class="question-description"><%= @question.description.capitalize %></p>
  </div>

<% end %>

<% if !@answers.blank? %>

    <div class="panel panel-default dash-stats-sessions">
      <div class="panel-heading answers">Answers</div>
      <div class="panel-body">
       <%= render 'shared/answer_list', object: @answers, question: @question %>
      </div>
      <div class="panel-footer"><%= will_paginate @answers %></div>
    </div>

<% else %>
	<div class="well well-sm">
		<h4>You haven't added any answers</h4>
	</div>
<% end %>


<% content_for :debug_dump do %>

<% end %>