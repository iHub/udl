<% provide(:page_title, "Answer") %>


<div class="page-header">
	<h2 class="pull-left">Answer</h2>

	<div class="nav nav-pills pull-right">
		<div class="btn-group">
			<button type="button" class="btn btn-default dropdown-toggle session-manage" data-toggle="dropdown">
		    	Manage <span class="caret"></span>
		  	</button>
		  	<ul class="dropdown-menu" role="menu">
		  		<li><%= link_to "Edit Answer", edit_scrape_session_question_answer_path(@scrape_session, @question, @answer) %></li>
		  		<li><%= link_to "View all Answers", scrape_session_question_answers_path(@scrape_session, @question)  %></li>
		  		<li class="divider"></li>
				<li><%= link_to("Delete Answer", scrape_session_question_answer_path(@scrape_session, @question, @answer), :method => :delete, :data => {:confirm => "Are you sure?"}) %>
				</li>
			</ul>
		</div>
	</div>
	<div class="clearfix"></div>
</div>

<div class="well well-sm">
	<h4 class="session-name">Question:<small class="pull-right">Session: <strong><%= @scrape_session.name %></strong></small>
	</h4>
	<h3><%= @question.question %></h3>
	<h4><%= @answer.answer %></h54
	<hr />
	
</div>
<div class="clearfix"></div>

<% content_for :debug_dump do %>
	<h4>Question Info</h4>
	<p><%= @question.inspect %></p>	
	<br />
<% end %>