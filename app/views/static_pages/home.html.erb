<% if signed_in? %>
	<% provide(:page_title, current_user.username ) %>
	
	<div class="page-header">
		<h2 class="app-title pull-left">Umati Data Logger</h2>
		<h4 class="pull-right">
			<%= current_user.username %>
		</h4>
		<div class="clearfix"></div>
	</div>

	<div class="username">
		<%= link_to "Create New Session", new_scrape_session_path, class: "btn btn-large btn-primary pull-right" %>
	</div>
	
	<div class="clearfix"></div>

	<% if current_user.scrape_sessions.any? %>
		<div class="well well-sm">
			<h4><%= pluralize current_user.scrape_sessions.count, "Session"  %></h4>
		</div>
		<%= render 'shared/scrape_session_list', object: current_user.scrape_sessions %>

		<%= will_paginate @scrape_sessions %>

	<% else %>
		<div class="well well-sm">
			<h4>You don't have any sessions</h4>
		</div>
	<% end %>

	

<% else #user is not signed in %>

	<% provide(:pagetitle, '') %>
	<div class="jumbotron">
	  <h1>Umati Data Logger</h1>

	  <%= link_to "Create Account", signup_path, class: "btn btn-large btn-primary" %>
	</div>

<% end %>