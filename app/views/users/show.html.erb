<% provide(:page_title, current_user.username ) %>

<div class="page-header">
	<h2 class="pull-left"><%= current_user.username %></h2>
	<ul class="nav nav-pills pull-right">
		<li><%= link_to "Create New Session", '/scrape_sessions/new' %></li>
		<li><%= link_to "Delete My Account", current_user, method: :delete, class: "delete-link", data: { confirm: "Are You sure? This action cannot be undone" } %></li>
	</ul>
	<div class="clearfix"></div>
</div>



<% if current_user.scrape_sessions.any? %>
	<div>
		<h3>Sessions</h3>
	</div>

	<%= render 'shared/scrape_session_list', object: @scrape_sessions %>

<% else %>
	<div class="well well-sm">
		<h4>You don't have any sessions</h4>
	</div>
<% end %>

<%= will_paginate @scrape_sessions %>
