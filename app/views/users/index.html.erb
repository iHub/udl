<% provide(:page_title, "All Users") %>
<% provide(:app_page, "users" ) %>

<div class="page-header">
	<h2>All Users</h2>
</div>

<div class="panel panel-default dash-stats-sessions">
  <div class="panel-heading sessions">All Sessions</div>
  <div class="panel-body">
    <div class="table-responsive">
    	<table class="table table-striped table-bordered table-hover table-condensed">
    		 <thead>
                <tr>
                  <th>#</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>              
                  <th>Role</th>
                  <% if current_user.isadmin? %>
                  	<th><!-- delete link --></th>
                  <% end %>
                  	
                </tr>
              </thead>

              <tbody>
              	<% count = 0 %>
              	<% @users.each do |user| %>
              		<% count+=1 %>
    	            <tr>
    					<td><%= count %></td>
    					<td><%= user.firstname.capitalize %></td>
    					<td><%= user.lastname.capitalize %></td>
    					<td><%= user.email %></td>
    					<td><%= user.role %></td>

    					<% if current_user.isadmin? && !current_user?(user) %>
    						<td>
    						<%= link_to "delete", user, method: :delete,
    					              data: { confirm: "Are You sure? This action cannot be undone" } %>
    						</td>
    					<% else %>
    						<td>&nbsp;</td>
    					<% end %>
    					
    	            </tr>
                <% end %>
               </tbody>
    	</table>
    </div>
</div>
  <div class="panel-footer"><%= will_paginate @users %></div>
</div>

