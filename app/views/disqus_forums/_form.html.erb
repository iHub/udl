<div class="authform">
	<%= form_for(@disqus_forum) do |f| %>

		<% provide(:page_title, "Disqus Forums") %>
		<% provide(:app_page, "disqus_forums" ) %>
		
	  <h2><%= @title %></h2>
	  <hr>
	  <div class="form-group">
	    <%= f.label :forum_name, "Forum Name" %><br>
	    <%= f.text_field :forum_name, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= f.submit class: "right button" %>
	  </div>
	<% end %>
</div>