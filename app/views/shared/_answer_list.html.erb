<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Answer</th>
        <th>Description</th>
        <th>Created</th>
        <th>Annotations</th>
      </tr>
    </thead>

    <tbody>
      <% counter = 0 %>
      <% object.each.with_index do |answer, index| %>
        <% counter +=1 %>
        <tr>
          <td><%= index+1 %></td>
          <td>
              <strong><%= link_to answer.answer, {controller: "answers", action: :show, question_id: answer.question_id, id: answer.id} %><strong>
          </td>
          <td><%= answer.description %></td>
          <td><%= answer.created_at.strftime("%I:%M %p, %b %e %Y") %></td>
          <td>Annotations</td>

        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>