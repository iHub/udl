
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Page</th>
        <th class="success">Message</th>
        <th style="width:10%">Created</th>
        <th>Comments</th>
        
      </tr>
    </thead>

    <tbody>
      
      <% @fb_posts.each.with_index do |fb_post, index| %>
        
        <tr>
          <td><%= index + fb_post.offset(@page_number) + 1  %></td>
          <td><%= fb_post.page_url %></td>
          <td><%= link_to fb_post.message, {controller: "fb_posts", action: :show, 
                                            scrape_page_id: fb_post.scrape_page_id, 
                                            id: fb_post } %></td>
          <td><%= time_ago_in_words(fb_post.created_time) %> ago</td>
          <td><%= fb_post.fb_comments_count %></td>

        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>

 