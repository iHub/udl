<%= form_for [@scrape_session, @question, @answer] do |f|%>
	
	<div class="form-group">
		<%= f.label		 :answer %>
		<%= f.text_field :answer, class: "form-control", 
								placeholder: "The Answer", 
								required: "text" %>
	</div>

	<div class="form-group">
		<%= f.label		:description %>
		<%= f.text_area :description, class: "form-control", 
								placeholder: "Description" %>
	</div>

	<%= f.submit "Add Answer", class: "btn btn-large btn-primary" %>
<% end %>