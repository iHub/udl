<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Question</th>
        <th>Description</th>
        <th>Created</th>
        <th>Annotations</th>
        
      </tr>
    </thead>

    <tbody>
      <% counter = 0 %>
      <% @questions.each.with_index do |question, index| %>
        <% counter +=1 %>
        <tr>
          <td><%= index+1 %></td>
          <td>
              <strong><%= link_to question.question,  scrape_session_question_path(@scrape_session.id, question) %><strong>
          </td>
          <td><%= question.description %></td>
          <td><%= question.created_at.strftime("%I:%M %p, %b %e %Y") %></td>
          <td>Annotations</td>

        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>