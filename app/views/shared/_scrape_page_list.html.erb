<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Page</th>
        <th>Scrape Frequency</th>
        <th>Created</th>
        <th>Posts</th>
        <th>Comments</th>
        <th>LOGS</th>
      </tr>
    </thead>

    <tbody>
      <% counter = 0 %>
      <% @scrape_pages.each.with_index do |scrape_page, index| %>
        <% counter +=1 %>
        <tr>
          <td><%= index+1 %></td>
          <td>
              <strong><%= link_to scrape_page.page_url,  scrape_session_scrape_page_path(@scrape_session.id, scrape_page) %><strong>
          </td>
          <td><%= distance_of_time_in_words(scrape_page.scrape_frequency) %></td>
          <td><%= time_ago_in_words(scrape_page.created_at)%> ago</td>
          <td><%= scrape_page.total_posts %></td>
          <td><%= scrape_page.total_comments %></td>
          <td>Link to Log</td>

        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>