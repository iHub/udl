<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th style="width:5%">#</th>
        <th>Page</th>
        <th style="width:10%">Created</th>
        <th style="width:8%">Scrape</th>
        <th style="width:8%">Frequency</th>
        <th style="width:8%">Override</th>
        <th style="width:7%">Posts</th>
        <th style="width:7%">Comments</th>
        <th style="width:7%">LOGS</th>
      </tr>
    </thead>

    <tbody>
      <% counter = 0 %>
      <% @scrape_pages.each.with_index do |scrape_page, index| %>
        <% counter +=1 %>
        <tr>
          <td><%= index+1 %></td>
          <td>
              <strong><%= link_to scrape_session_scrape_page_path(@scrape_session.id, scrape_page) do %>www.facebook.com/<%= scrape_page.page_url %><% end %><strong>
          </td>
          <td><%= time_ago_in_words(scrape_page.created_at)%> ago</td>
          <td><%= scrape_page.continous_scrape.to_s.upcase %></td>
          <td><%= distance_of_time_in_words(scrape_page.scrape_frequency) %></td>
          <td><%= scrape_page.override_session_settings.to_s.upcase %></td>
          <td><%= scrape_page.total_posts %></td>
          <td><%= scrape_page.total_comments %></td>
          <td>Link to Log</td>

        </tr>
      <% end %>
      
    </tbody>
  </table>
</div>